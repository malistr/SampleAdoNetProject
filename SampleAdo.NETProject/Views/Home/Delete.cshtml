@model SampleAdo.NETProject.Models.Product
@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">


<h2 >Delete Product</h2>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ProductID" value="@Model.ProductID" name="ProductID" />

    <div class="form-group">
        <label>Product Name</label>
        <input asp-for="@Model.ProductName" class="form-control" name="ProductName" value="@Model.ProductName" />
    </div>

    <div class="form-group">
        <label>Unit Price</label>
        <input asp-for="@Model.UnitPrice" class="form-control" name="UnitPrice" value="@Model.UnitPrice" />
    </div>

    <button type="submit" class="btn btn-primary">Delete Product</button>
</form>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
